<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ac.jec.cm0209.fenrir.detailInfoActivity"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/shopImg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/shopimgbackground"
            android:padding="2dp"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12dp"
            android:textColor="#898989"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="アクセス"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txtAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="住所"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="営業時間"
                    android:textColor="#898989"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txtOpentime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ababab"
                android:layout_margin="5dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="定休日"
                    android:textColor="#898989"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txtHoliday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="電話番号"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txtTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoLink="phone"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ホームページ"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txtHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoLink="web"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="クーポン"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txtCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoLink="web"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地図"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <fragment
            android:id="@+id/map"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_marginBottom="10dp">
        </fragment>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ababab"
            android:layout_marginBottom="5dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="紹介"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txtPr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
    </LinearLayout>
</ScrollView>
